# export OPENAI_API_KEY="sk-proj-..."
# export ANTHROPIC_API_KEY="sk-ant-..."
# export OPENAI_MONDAY_API="sk-proj-..."
# export DEEPSEEK_API_KEY="sk-..."
# export PERPLEXITY_API_KEY="pplx-..."

# Then: source ~/.bashrc

